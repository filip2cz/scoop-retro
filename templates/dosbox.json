    "shortcuts": [
        [
            "run.bat",
            "Gamename"
        ]
    ],
    "post_install":[
        "$shortcutPath = Join-Path $env:USERPROFILE 'AppData\\Roaming\\Microsoft\\Windows\\Start Menu\\Programs\\Scoop Apps\\Gamename.lnk'",
